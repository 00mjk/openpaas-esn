extends ../layout
block content
    div.login-bg
        div.form-container
            form(method='POST')
                legend Sign In
                .form-group
                    label.control-label(for='username') Username
                    input.form-control(type='text', name='username', id='username', placeholder='Username', autofocus=true)
                .form-group
                    label.control-label(for='username') Password
                    input.form-control(type='password', name='password', id='password', placeholder='Password')
                .form-group
                    button.btn.btn-primary(type='submit')
                        i.fa.fa-unlock-alt
                        | Login