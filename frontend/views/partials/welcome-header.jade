#welcome-header
  div(data-ng-controller="localeController")
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Hiveety
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | #{__('Language')}: {{ selectedLocale }}
                  span.caret
                ul.dropdown-menu
                  li(data-ng-repeat="locale in supportedLocales")
                    a(href='#', data-ng-click='setLocale(locale)') {{ locale }}
