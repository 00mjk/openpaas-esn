.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Hiveety
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=title=='Home'?'active':undefined)
          a(href='/') #{__('Home')}
      ul.nav.navbar-nav.navbar-right
        if (!user)
          li(class=title=='Login'?'active':undefined)
            a(href='/login') #{__('Login')}
          li(class=title=='Sign up'?'active':undefined)
            a(href='/invitation/signup') #{__('Sign up')}
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.picture
                img.profile-image(src='#{user.picture}')
              | #{user.username || user.emails[0] || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li: a(href='/account') #{__('My Account')}
              li.divider
              li: a(href='/logout') #{__('Logout')}


