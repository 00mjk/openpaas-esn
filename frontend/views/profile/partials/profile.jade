div.row(ng-controller='profileeditioncontroller')
    div.col-md-4
        div
            img(src='/images/user.png')
        div
            a #{__('Edit or add photos')}
    div.col-md-8
        div.row
            div.col-md-8
                span(us-spinner="{lines: 7, length: 3, width: 5, radius: 6, corners: 1, rotate: 0, direction: 1, speed: 1, trail: 50, top: '10%', left: '20%'}",
                    spinner-start-active='1',
                    ng-show='running.name')
                span.h3(editable-text='fullName', e-form='nameForm', onbeforesave='updateName($data)') {{ initFullName(user.firstname, user.lastname) }}
            div.col-md-4
                button.btn.btn-link(ng-click='nameForm.$show()', ng-hide='nameForm.$visible', ng-disabled='running.name') Change
        //Job
        div.row
            div.col-md-8
                span(us-spinner="{lines: 7, length: 3, width: 5, radius: 6, corners: 1, rotate: 0, direction: 1, speed: 1, trail: 50, top: '10%', left: '20%'}",
                spinner-start-active='1',
                ng-show='running.job')
                span(ng-show='!user.job && !jobForm.$visible', style='color:grey;') #{__('Job Title')}
                span(editable-text='user.job', e-form='jobForm', onbeforesave='updateJob($data)') {{ user.job }}
            div.col-md-4
                button.btn.btn-link(ng-click='jobForm.$show()', ng-hide='jobForm.$visible', ng-disabled='running.job') Edit
