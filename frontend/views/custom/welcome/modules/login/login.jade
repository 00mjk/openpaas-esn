.col-md-12.panel.widget.form-container.login
  form(name='form')
    .alert.alert-danger(ng-hide='!showError()')
      p
        strong #{__('Error')} :&nbsp;
        | {{error.error.details || 'Bad username or password'}}
    .alert.alert-info(ng-show='loginIn')
      p #{__('Please wait...')}
    fieldset(ng-disabled='loginIn')
      .row
        .col-sm-12
          .alert.alert-info
            | Please use your Linagora email and password.
      .row
        .col-xs-12.form-group
          .input-group
            input.form-control(type='email', ng-model='credentials.username', name='username', id='username', placeholder="login@linagora.com", autofocus=true, required, bounce-on-keypress)
            span.input-group-addon
              i.fa.fa-user
        .col-sm-9.col-xs-12.form-group
          .input-group
            input.form-control(type='password', ng-model='credentials.password', name='password', id='password', placeholder="password", required, autocomplete='{{autocomplete}}')
            span.input-group-addon
              i.fa.fa-key
        .col-sm-3.col-xs-12.form-group
          button.btn.btn-primary.pull-right(type='submit', ng-click='autofill(); login()', ng-disabled='loginTask.running')
            i.fa.fa-sign-in(ng-hide='loginTask.running') &nbsp;
            i.fa.fa-spinner.fa-spin(ng-hide='!loginTask.running') &nbsp;
            | #{__('{{loginButton.label}}')}
          .clear-fix
      .row
        .form-group
          .col-xs-12
            label
              input(type='checkbox', ng-model='credentials.rememberme', name='rememberme', id='rememberme')
              | &nbsp; #{__('Remember me')}
        .form-group
          include recaptcha
