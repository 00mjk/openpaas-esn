    .col-xs-12.esn-panel.community-summary
      community-actions-toolbar(community="community")
  .row
    .col-lg-9.col-md-9.col-sm-9.col-xs-12.esn-component-container
      activity-stream(streamable='community', streams='streams', calendar-id='community._id')
    .col-lg-3.col-md-3.col-sm-3.hidden-xs.rightPane()
      .esn-panel
        community-members-widget(community='community' in-slices-of='4')
