.col-xs-10.col-md-10
  .well
    span.btn.btn-info.btn-file #{__('Select a file')}...
      input(type="file", id="profile_image", load-button, max-size="10")
  #error
  .row.text-center
    .col-xs-10.col-md-8
      img-loaded(width="380")
    .col-xs-10.col-md-4(ng-hide="!preview")
      .thumbnail
        canvas(width="128", height="128", id="preview", img-preview)
        .caption
          .alert.alert-info(ng-show="progress === 0") #{__('Crop and upload your avatar')}.
          .alert.alert-info(ng-show="progress > 0 && progress < 100 && !uploadError") #{__('Uploading, please wait')}...
          .alert.alert-success(ng-show="progress === 100 && !uploadError") #{__('Avatar has been uploaded')}!
          .alert.alert-danger(ng-show="uploadError") #{__('Error while uploading')}!
          p
            button.btn.btn-primary.btn-large(ng-click="upload()") {{status}}
