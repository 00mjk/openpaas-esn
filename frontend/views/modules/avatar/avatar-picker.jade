.row
  .btn-group.btn-group-justified
    .btn-group
      span.btn.btn-info.btn-file
        i.mdi.mdi-upload
        | #{__('Select an image')}
        input(type="file", accept="image/*", load-button)
.vertiz-space
.row.error
.row
  .col-xs-6.col-xs-offset-3.col-sm-3.col-sm-offset-0
    div(ng-show='!image.selected')
      img(width="128", height="128", ng-src='{{avatarPlaceholder}}')
    div(ng-show='image.selected')
      .img-preview
        a(data-ng-click='removeSelectedImage()', href='')
          i.mdi.mdi-close
        canvas(width="128", height="128", id="preview", img-preview)
  .col-xs-8.col-xs-offset-2.col-sm-9.col-sm-offset-0(ng-show='image.selected')
    .hidden-md.hidden-sm.hidden-lg
      img-loaded(width="190")
    .hidden-xs
      img-loaded(width="380")
