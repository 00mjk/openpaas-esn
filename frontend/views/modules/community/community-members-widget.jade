.community-members-widget
  .title
    i.fa.fa-users
    | #{__('Members')}
  hr

  .row.alert.alert-danger(ng-show="error", role="alert")
    p #{__('Error while getting members')}.

  .row
    .row(ng-repeat="row in members | inSlicesOf: 4")
      .col-xs-3.nopadding(ng-repeat="member in row")
        community-member-avatar(member="member", community="community")

  .row.text-center(ng-show='more > 0')
    a(ng-href='#/communities/{{community._id}}/members') #{__('And')} {{more}} #{__('more')}...
  .row.text-center(ng-show='more === 0')
    a(ng-href='#/communities/{{community._id}}/members') #{__('Show all members')}...