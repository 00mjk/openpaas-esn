div.nopadding

  .col-lg-2.col-sm-3.col-xs-4

    a(href='#/communities/{{community._id}}')
      img.thumbnail.nopadding(src='/images/community.png', ng-src='/api/communities/{{community._id}}/avatar')

  .col-lg-10.col-sm-9.col-xs-8
    h4.media-heading
      a(href='#/communities/{{community._id}}')
        strong {{community.title}}
      small &nbsp; {{community.type}}
    ul.list-inline
      li.pull-left
        i.fa.fa-users
        span(ng-if='community.members_count !== 1') {{community.members_count ||Â 0}} #{__('members')}
        span(ng-if='community.members_count === 1') 1 #{__('member')}
      li.pull-right(ng-if='::actions')
        community-button-join(community='community', user='user', on-join='joinSuccess()', on-fail='joinFailure()')
        community-button-leave(community='community', user='user', on-leave='leaveSuccess()', on-fail='leaveFailure()')
        community-button-request-membership(community='community', user='user', on-request='requestMembershipSuccess()', on-fail='requestMembershipFailure()')
        community-button-cancel-request-membership(community='community', user='user', on-cancel-request='cancelRequestMembershipSuccess()', on-fail='cancelRequestMembershipFailure()')
      .clearfix
    p.hidden-xs.community-description(ng-show='community.description') {{community.description | characters:256 :false }}
