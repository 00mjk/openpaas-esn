div.col-xs-12.nopadding.esn-member
  .col-lg-2.col-sm-3.col-xs-4.text-center
    a(href='#/communities/{{community._id}}')
      img.thumbnail.nopadding(src='/images/community.png', ng-src='/api/communities/{{community._id}}/avatar')
  .col-lg-7.col-sm-5.col-xs-8
    h4.media-heading
      a(href='#/communities/{{community._id}}') {{community.title}}
    ul.list-inline
      li.pull-left
        span.label.label-primary {{community.members.length}} #{__('members')}
      li.pull-left
        span.label.label-default {{community.type}}
      .clearfix
    blockquote.hidden-xs.community-description(ng-show='community.description')
      p {{community.description | characters:256 :false }}
  .col-lg-3.col-sm-4.col-xs-12
    a.btn.btn-primary(href="#/communities/{{community._id}}")
      | #{__('More')}...