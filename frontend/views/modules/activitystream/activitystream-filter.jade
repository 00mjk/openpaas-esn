div.btn-group
  button.btn.btn-info.dropdown-toggle(type="button" data-toggle="dropdown" aria-expanded="false") {{selectedStream.displayName || 'All'}}&nbsp;
    span.caret
  ul.dropdown-menu.dropdown-menu-right(role="menu")
    li
      a(href="" ng-click="clearStreamSelection()")
        img(src='/images/activitystream.png')
        span #{__("All")}
    li
      a(href="" ng-click="selectStream(activitystream)")
        img(ng-src='{{activitystream.avatarUrl}}')
        span #{__("Current")}
    li.divider
    li(ng-repeat="stream in streams")
      a(href="" ng-click="selectStream(stream)")
        img(ng-src='{{stream.avatarUrl}}')
        span {{::stream.displayName}}
