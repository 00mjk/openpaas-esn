div.btn-group
  button.btn.btn-info.dropdown-toggle(type="button" data-toggle="dropdown" aria-expanded="false")
    span(ng-if='selectedStream.activity_stream.uuid === activitystream.activity_stream.uuid') #{__("Current")}
    span(ng-if='selectedStream && selectedStream.activity_stream.uuid !== activitystream.activity_stream.uuid') {{selectedStream.displayName}}
    span(ng-if='!selectedStream') #{__("All")}
    span &nbsp;
    span.caret
  ul.dropdown-menu.dropdown-menu-right(role="menu")
    li
      a(href="" ng-click="clearStreamSelection()")
        img(src='/images/activitystream.png', alt=__("Activity Stream Avatar"))
        span #{__("All")}
    li
      a(href="" ng-click="selectStream(activitystream)")
        img(ng-src='{{activitystream.avatarUrl}}', alt=__("Activity Stream Avatar"))
        span #{__("Current")}
    li.divider
    li(ng-repeat="stream in displayList")
      a(href="" ng-click="selectStream(stream)")
        img(ng-src='{{stream.avatarUrl}}', alt=__("Activity Stream Avatar"))
        span {{::stream.displayName}}
