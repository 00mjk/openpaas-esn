.media.notification-content.esn-panel
  div(ng-show='error')
    p #{__('Error while getting notifications')}
  div(ng-show='loading && !error')
    p
      i.fa.fa-cog.fa-spin
      | Loading notification
  div(ng-hide='loading || error')
    a.pull-left(ng-href='/#/communities/{{invitationCommunity._id}}')
      img.media-object(ng-src='/api/avatars?objectType=community&id={{invitationCommunity._id}}', src='/images/community.png')
    .media-body
      .notification-head.ellipsis
        a(ng-href="/#/communities/{{invitationCommunity._id}}") {{invitationCommunity.title}}
        span.pull-right.date.hidden-xs(am-time-ago="notification.timestamps.creation")
      .notification-body
        span
          a(ng-href="/#/profile/{{invitationSender._id}}") {{invitationSender.firstname}} {{invitationSender.lastname}}
          | &nbsp;#{__('invites you to join this community')}
      .notification-actions
        community-invitation-accept-button
        &nbsp;
        community-invitation-decline-button
