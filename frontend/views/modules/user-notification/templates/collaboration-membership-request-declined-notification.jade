.media
  div(ng-show='error')
    p #{__('Error while getting notifications')}
  div(ng-show='loading && !error')
    p
      i.fa.fa-cog.fa-spin
      | #{__('Loading notifications')}
  div(ng-hide='loading || error')
    a.pull-left(ng-href='/#/{{::collaborationPath}}/{{::collaboration._id}}')
      img.media-object(ng-src='/api/avatars?objectType={{::collaboration.objectType}}&id={{::collaboration._id}}', fallback-src='/images/collaboration.png')
    .media-body
      .ellipsis
        span.pull-right.date.hidden-xs(am-time-ago="::notification.timestamps.creation")
        a(ng-href="/#/{{::collaborationPath}}/{{::collaboration._id}}") {{::collaboration.title}}
      div(ng-switch='collaboration.objectType')
        span(ng-switch-when='community') #{__('Your request to join the community has been declined')}...
        span(ng-switch-when='project') #{__('Your request to join the project has been declined')}...
        span(ng-switch-default) #{__('Your request has been declined')}...
