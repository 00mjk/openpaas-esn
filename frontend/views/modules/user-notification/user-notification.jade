.popover(tabindex="-1" user-notification-popover)
  .arrow
  .popover-title #{__('Notifications')}
    a.pull-right(href="/#") #{__('Mark as read')}
  .popover-content
    ul.nav.nav-pills.nav-stacked
      li.popover-item.read.text-center(ng-show="!items.length") #{__('You have no notification.')}
      li.popover-item(ng-repeat="item in popoverObject.currentItems" ng-hide="!items.length")
        div
      li.divider.nopadding
      li.popover-pager
        ul.pager
          li.pull-left.popover-pager
            a(href="#" ng-hide="true") #{__('Previous')}
          li.popover-pager(ng-hide="true") 1 / 1
          li.pull-right.popover-pager
            a(href="#" ng-hide="true") #{__('Next')}
