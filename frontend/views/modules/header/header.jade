div
  header#header
    div(ng-if='enableScrollListener && !disableByEvent', scroll-listener, data-on-scroll-down='hide', data-on-scroll-up='show', data-on-destroy='show', data-disabled='isDisabled')

    div.header-inner.flex-vertical-centered.flex-space-between
      ul.list-inline.all-centered
        li.logo
          a(href='#')
            img.openpaas-logo(src="/images/white-logo.svg")
      ul.list-inline.all-centered
        li.hover-scale-animation
          a(href='')
            i.mdi.mdi-magnify
        li.hover-scale-animation.toggle-fullscreen(device-detector)
          a(href='', ng-click='toggleFullScreen()')
            i.md.mdi.mdi-fullscreen
        li.hover-scale-animation
          application-menu-toggler
    .visible-xs(ng-class='{"visible-md": subHeaderVisibleMd}')
      #sub-header.flex-vertical-centered(ng-if='hasSubHeaderGotInjections', dynamic-directive='sub-header-content')
  sidebar
  api-notification
