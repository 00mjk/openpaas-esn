div.message-panel.form-container(ng-controller='messageEditionController')
  .error
  ul.list-inline
    li
      button.btn.btn-link(type='button', ng-click='show("whatsup")')
        i.fa.fa-pencil
    li
      button.btn.btn-link(type='button', ng-click='show("poll")')
        i.fa.fa-bar-chart
    message-edition-event-button
    injections-widget(injection-anchor-id="messageEditionMessageTypeButton", injection-subject="community")
  div(data-ng-switch='type')
    whatsup-edition(data-ng-switch-when='whatsup', type="type")
    poll-edition(data-ng-switch-when='poll', type="type")
    event-edition(data-ng-switch-when='event')
    injections-widget(injection-anchor-id="messageEditionMessageTypeSwitch", injection-subject="community")
