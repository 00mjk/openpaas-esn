div.media
  a.media-left.pull-left(ui-sref="profile({user_id: message.author._id})")
    .media-object.w-128
      esn-avatar(avatar-id="::message.author._id", display-user-status="true")
  div.media-body
    div
      h4.media-heading
        a(ui-sref="profile({user_id: message.author._id})") {{::message.author.firstname}} {{::message.author.lastname}}
        a(ng-href="/#/messages/{{::message._id}}/activitystreams/{{activitystreamUuid}}")
          small {{::message.published | amDateFormat:'MMM D YY, h:mm a'}}
      display-position(position='message.position')
      p.multilines(ng-bind-html="message.content | linky:'_blank'")
    message-attachments(message='message')
