.attachment-widget
  attachment-icon(type='{{::attachment.contentType}}')
  div.ellipsis
    a.download(target='_blank', ng-href='/api/files/{{::attachment._id}}' title='Download {{::attachment.name}}') {{::attachment.name}}
  span.meta.ellipsis
    {{::attachment.length | bytes}} {{::attachment.contentType | extension | uppercase}} file
