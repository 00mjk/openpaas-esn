.search-header.flex-vertical-centered
  .header-back-button(ng-show="'search' | includedByState")
    button.btn.btn-link.btn-icon(href='', esn-back-button='^', title=__('Back'))
      i.mdi.mdi-arrow-left.mdi-margin-right

  form.search-header-form(name='form', ng-submit='search()')
    button.btn.btn-icon.btn-link.button.search-header-button.search-button.hidden-xs(type="submit", title=__('Search'))
      i.mdi.mdi-magnify(ng-class="{ 'focus': focus }")
    i.mdi.mdi-magnify.search-header-button.search-button.visible-xs(ng-class="{ 'focus': focus }")

    input.search-input(type="search", name="search", ng-model="data.searchInput", ng-focus="focus=true", ng-blur="focus=false", placeholder=__('Search') + "\u2026")

    button.btn.btn-icon.btn-link.button.search-header-button.clean-button(type="button", title=__('Delete'), ng-hide="!data.searchInput", ng-click="clearSearchInput()")
      i.mdi.mdi-close(ng-class="{ 'focus': focus }")
    .search-header-button.settings-button.hidden-xs
      button.btn.btn-icon.btn-link.button(type="button", data-auto-close="1", data-template-url="/views/modules/header/search/settings/search-header-settings.html", data-animation="none", data-target=".search-input", data-placement="bottom", bs-popover, title=__('Search options'))
        i.mdi.mdi-menu-down(ng-class="{ 'focus': focus }")

  button.btn.btn-icon.btn-link.button.settings-button.visible-xs(type="button", data-auto-close="1", data-template-url="/views/modules/header/search/settings/search-header-settings.html", data-target=".search-header", data-animation="none", data-placement="bottom", bs-popover, title=__('Search options'))
    i.mdi.mdi-menu-down
