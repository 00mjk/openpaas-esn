.av-fadeIn(ng-show='display')
.attachment-viewer(ng-if="onInit", ng-init='onInit()', ng-show='display', ng-click='close($event)')
  .av-topBar(ng-show='display')
    .av-details
      span.av-number {{number}}
      span.av-caption.ellipsis {{file.name}}
    .av-download(title='#{__("Download")} #{__("file")}')
      a(href='{{file.url}}', esn-download-file='{{file.name}}')
        i.mdi.mdi-download.mdi-hc-fw
    .av-closeContainer(ng-click='close($event)', title='#{__("Close")}')
      span.av-close
        i.mdi.mdi-close.mdi-hc-fw.av-closeButton
  .av-outerContainer(ng-show='display')
    .av-container
      .av-main(ng-show='displayMain')
      .av-loader(ng-hide='displayMain')
        span.av-cancel
      .av-nav
        span.av-prev.nav(ng-click='openPrev()', ng-show='displayNav', title='#{__("Previous")}')
          i.mdi.mdi-chevron-left.mdi-hc-fw  
        span.av-next.nav(ng-click='openNext()', ng-show='displayNav', title='#{__("Next")}')
          i.mdi.mdi-chevron-right.mdi-hc-fw
