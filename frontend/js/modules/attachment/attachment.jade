.esn-attachment(ng-click="ctrl.openViewer()")
  .icon
    a(target='_blank', title='#{__("Download")} {{::ctrl.attachment.name}}')
      esn-attachment-icon(type='ctrl.attachment.contentType')
  .metadata
    h2.ellipsis
      a(target='_blank', title='#{__("Download")} {{::ctrl.attachment.name}}') {{::ctrl.attachment.name}}
    small.ellipsis {{::ctrl.attachment.length | bytes}} {{::ctrl.attachment.contentType | extension | uppercase}} #{__("file")}
    