.profile-popover-content.flex-horizontal-centered
  .profile-card.flex-horizontal-centered
    .profile-card-left
      esn-avatar(user-id='$ctrl.user._id', user-email='$ctrl.user.email' ng-click='$ctrl.onProfileButtonClick()')
    .profile-card-right.profile-card-informations
      .ellipsis
        span.displayname(ng-class="{capitalize: $ctrl.user.displayName !== $ctrl.user.email}") {{::$ctrl.user.displayName}}
      div
        a(ng-href='mailto:{{$ctrl.user.preferredEmail}}', op-inbox-compose, op-inbox-compose-users='[$ctrl.user]') {{$ctrl.user.preferredEmail}}
      div(ng-if='$ctrl.user.officeLocation')
        | {{$ctrl.user.officeLocation}}
    .profile-card-right(ng-if='$ctrl.isMobileDevice')
      button.btn.btn-default.popover-close-button(type="button" role="button" aria-label="Close" ng-click="$ctrl._hideComponent($event)")
        span(aria-hidden="true")
          i.mdi.mdi-close
  .popover-profile-user-actions.flex-horizontal-centered
    .actions(ng-if='!$ctrl.isCurrentUser' dynamic-directive='profile-user-actions')
    .actions
      button.btn.btn-link(ng-if='$ctrl.isMobileDevice' ng-click='$ctrl.onProfileButtonClick()')
        i.mdi.mdi-account-box
