.community-members
  .row
    .col-xs-12
      .row(ng-show='isCommunityManager()')
        ul.nav.nav-pills.nav-justified
          li(ng-class="{active: selected === 'members' ||Â selected === undefined}")
            a(ng-click="selected = 'members'", href="") #{__('Members')}
          li(ng-class="{active: selected === 'membership'}")
