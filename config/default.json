{
  "app": {
    "name": "Linagora ESN"
  },
  "webserver": {
    "enabled": true,
    "debugPort": 8081,

    "ip": "0.0.0.0",
    "ipv6": "::",
    "port": 8080,

    "ssl_ip": "0.0.0.0",
    "ssl_ipv6": "::",
    "ssl_port": 8443,
    "ssl_key": "config/ssl.key",
    "ssl_cert": "config/ssl.crt",

    "virtualhosts": [],
    "startupBufferTimeout": 5000
  },
  "wsserver": {
    "enabled": true,
    "port": 8080
  },
  "db": {
    "reconnectOnConfigurationChange": true
  },
  "log": {
    "file": {
      "enabled": true,
      "filename": "./log/application.log",
      "level": "info",
      "handleExceptions": true,
      "json": false,
      "prettyPrint": true,
      "colorize": false
    },
    "console": {
      "enabled": true,
      "level": "debug",
      "handleExceptions": true,
      "json": false,
      "prettyPrint": true,
      "colorize": true
    }
  },
  "auth": {
    "strategies": ["local", "mongo", "bearer"]
  },
  "modules": [
    "linagora.esn.davserver",
    "linagora.esn.calendar",
    "linagora.esn.appstore",
    "linagora.esn.core.webserver",
    "linagora.esn.core.wsserver",
    "linagora.esn.project",
    "linagora.esn.contact",
    "linagora.esn.messaging.email",
    "linagora.esn.cron",
    "linagora.esn.digest.daily",
    "linagora.esn.graceperiod"
  ],
  "email": {
    "templatesDir": "./templates/email"
  }
}
