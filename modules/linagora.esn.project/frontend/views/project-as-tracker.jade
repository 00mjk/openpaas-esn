div.list-community(ng-controller="projectsAStrackerController")
  div.title
    i.fa.fa-suitcase
    | #{__('My projects')}
  hr
  div(ng-show='error') {{error}}
  ul.nav.nav-pills.nav-stacked(ng-hide='error')
    li(ng-repeat="activityStream in activityStreams")
      a(href='{{activityStream.href}}' ng-click='getUnreadUpdate(activityStream.uuid)' title='{{activityStream.display_name}}')
        .badge.pull-right(ng-hide='activityStream.unread_count === 0') {{activityStream.unread_count}}
        .ellipsis
          img(src='/projects/images/project.png' ng-src='{{activityStream.img}}')
          | {{activityStream.display_name}}