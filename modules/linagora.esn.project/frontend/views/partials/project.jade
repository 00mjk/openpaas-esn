.block-header
.row
  .col-xs-12
    project-description(project="project")
.row(ng-if='canRead()')
  .row
    .col-lg-9.col-md-9.col-sm-9.col-xs-12
      // TODO Remove this when the injection module has
      // the method to inject inside all domains.
      activity-stream(activitystream='project', streams='streams', writable='writable', calendar-id='::project._id')
    .col-lg-3.col-md-3.col-sm-3.hidden-xs.rightPane
      collaboration-members-widget(object-type='project', collaboration='project', in-slices-of='4', object-type-filter='user')
      .vertiz-space
      collaboration-invite-users(ng-if='isProjectManager()' object-type="project", collaboration="project")
      .vertiz-space
      project-add-communities-widget(ng-if='isProjectManager()' project="project")
.col-xs-12(ng-if='!canRead()')
  p.text-center #{__('You are not allowed to see the content of this project.')}
