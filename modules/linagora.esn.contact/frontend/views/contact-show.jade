form.col-xs-12.esn-panel.contact-display-panel(name='contactForm')
  .vertiz-space
  .row
    .col-sm-7
      span.contact-heading
        | {{contact.displayName}}
    .col-sm-5.action-bar
      button.btn.icon-btn.accept-btn.fa.fa-check-circle-o(type='button', ng-click='accept()', ng-disabled='contactForm.$invalid')
      button.btn.icon-btn.starred-btn.fa.fa-star(type='button', ng-click='contact.starred = !contact.starred', ng-class='{ checked: contact.starred }')
      button.btn.icon-btn.cancel-btn.fa.fa-times(type='button', ng-click='close()')
  contact-display(contact='contact')
