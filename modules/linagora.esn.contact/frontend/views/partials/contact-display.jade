.form-horizontal
  .row
    .col-md-7
      .row
        .col-xs-6.col-sm-8
          .form-group
            input.bigger.form-control.floating-label(type='text', placeholder='#{__("First Name")}', ng-model='contact.firstName', ng-required='!contact.lastName')
          .form-group
            input.bigger.form-control.floating-label(type='text', placeholder='#{__("Last Name")}', ng-model='contact.lastName', ng-required='!contact.firstName')
          .form-group
            input.bigger.form-control.floating-label(type='text', placeholder='#{__("Organization")}', ng-model='contact.org')
        .col-xs-6.col-sm-4.all-centered
          .photo(modal-launcher, template="contact/views/partials/contact-avatar-modal", ng-click="showModal()")
            img(ng-src='{{contact.photo || "/images/user.png"}}')
      .form-group(ng-show='contact.org')
        label.control-label.sr-only #{__("Job Title")}
        .col-sm-12
          input.form-control.floating-label(type='text', placeholder='#{__("Job Title")}', ng-model='contact.orgRole')
      multi-input-group(multi-input-model='contact.emails', multi-input-types='["Home", "Work", "Other"]', multi-input-texttype='email', multi-input-placeholder='#{__("Email")}')
      multi-input-group(multi-input-model='contact.tel', multi-input-types='["Home", "Mobile", "Work", "Other"]', multi-input-texttype='tel', multi-input-placeholder='#{__("Phone")}')
      multi-input-group-address(multi-input-model='contact.addresses', multi-input-types='["Home", "Work", "Other"]')
    .col-md-5
      .form-group.tags-group
        label.control-label.sr-only #{__("Tags")}
        .col-sm-12
          tags-input(ng-model='contact.tags', placeholder='Tags', add-on-space='true', add-on-enter='true', min-length='1')
      multi-input-group(multi-input-model='contact.social', multi-input-types='["Skype", "Twitter", "Other"]', multi-input-texttype='text', multi-input-placeholder='#{__("Social Account")}')
      .form-group
        label.control-label.col-xs-3 #{__("Birthday")}
        .col-xs-9
          input.form-control(type='text', placeholder='yyyy/MM/dd', ng-model='contact.birthday' name="date" bs-datepicker data-start-week="1" data-date-format="yyyy/MM/dd" data-autoclose="true")
      .form-group
        label.control-label.sr-only #{__("Nickname")}
        .col-sm-12
          input.form-control.floating-label(type='text', placeholder='#{__("Nickname")}', ng-model='contact.nickname')
      .form-group(ng-show='contact.org')
        label.control-label.sr-only #{__("Company Website")}
        .col-sm-12
          input.form-control.floating-label(type='text', placeholder='#{__("Company Website")}', ng-model='contact.orgUri')
  .row
    .col-md-12
      .form-group
        .col-xs-12
          textarea.form-control.floating-label(rows='6', placeholder='#{__("Comments")}', ng-model='contact.notes')
