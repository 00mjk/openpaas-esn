.contact-list-item.media.p-10.hidden-xs(ng-click='displayContact()')
  .pull-left
    contact-photo.media-object(contact='contact', list-view='true', avatar-size='{{avatarSize}}')
  .media-body.p-l-15.m-r-30
    .lv-title(bs-tooltip, title="{{displayShell.getDisplayName()}}")
      | {{displayShell.getDisplayName()}}
    ul.lv-attrs.contact-list-item-attrs
      li.hidden-xs(ng-repeat="attrs in displayShell.getInformationsToDisplay()")
        a(ng-click="actionClick($event, attrs.action)" ng-href="{{attrs.action}}" op-inbox-compose op-inbox-compose-display-name='{{displayShell.getDisplayName()}}')
          i.mdi.contact-attr-icon(ng-class="attrs.icon")
          |  {{attrs.id}}
.lv-actions.actions
  li.dropdown
    a(href='', data-toggle='dropdown', aria-expanded='true')
      i.mdi.mdi-dots-vertical
    ul.dropdown-menu.dropdown-menu-right
      li(dynamic-directive='contact-list-menu-items')

.contact-list-item.p-10.visible-xs(ng-click='displayContact()')
  .pull-left.touch-zone
      contact-photo.media-object(contact='contact', list-view='true', avatar-size='{{avatarSize}}')
  .media-body.row
    .lv-title.col-xs-11.touch-zone
          h4.media-heading {{displayShell.getDisplayName()}}
