.input-group
  input(class='{{inputClass}}', type='{{type}}', placeholder='{{placeholder}}', ng-model='ngModel', ng-model-options='{updateOn: "blur"}')
  span.inline-input-edition-group-btn.inline-remove-button.input-group-btn.hidden-xs(ng-show='showGroupButtons')
    button.btn.btn-default(type='button', ng-click='resetInput()')
      i.fa.fa-remove
  span.inline-input-edition-group-btn.inline-remove-button.input-group-btn(ng-if='lastModifiedFlag && updateSuccessFlag')
    button.btn.btn-default(type='button')
      i.fa.fa-check.modify-success
  span.inline-input-edition-group-btn.inline-check-button.input-group-btn.hidden-xs(ng-show='showGroupButtons')
    button.btn.btn-default(type='button')
      i.fa.fa-check
  
