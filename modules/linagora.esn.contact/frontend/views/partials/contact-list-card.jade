.card.contact-list-card.clickable(ng-click='displayContact()')
  .card-body
    .flex-start
      .p-10.flex-noshrink
        .card-image
          img(ng-src='{{displayShell.getAvatar(avatarSize)}}')
          i.mdi.i-contact-card(ng-class="displayShell.getOverlayIcon()")
      .p-t-10.p-r-10.contact-info
        div
          strong(bs-tooltip title="{{contact.displayName}}") {{contact.displayName}}
        .p-t-5(ng-repeat="attrs in displayShell.getInformationsToDisplay()")
          a(bs-tooltip title="{{attrs.action}}" ng-click="actionClick($event, attrs.action)" ng-href="{{attrs.action}}" op-inbox-compose op-inbox-compose-display-name='{{displayShell.getDisplayName()}}')
            i.mdi.contact-attr-icon(ng-class="attrs.icon")
            |  {{attrs.id}}
        .p-t-5
          span {{contact.orgRole}}
          span(ng-if='contact.orgRole && contact.orgName') &nbsp;#{__('at')}&nbsp;
          span {{contact.orgName}}
