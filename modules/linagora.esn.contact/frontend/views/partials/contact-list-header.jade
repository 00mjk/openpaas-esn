header
  .contacts-list-header-inner
    .row.all-centered
      .col-xs-12.col-md-8
        .flex-space-between.flex-vertical-centered.flex-wrap
          .contacts-list-header-title
            h2
              .contact-categories-letter(ng-show="!contactSearch.searchInput && displayAs === 'list'")
                contact-category-letter
              span(ng-show="getContactTitleDisplayCondition()") #{__('Contacts')}
              span(ng-show="contactSearch.searchInput") #{__('Search in contacts')}
              small(ng-switch="searchResult.count" ng-if="!!contactSearch.searchInput")
                span(ng-switch-when='0') #{__('No contacts found')}
                span(ng-switch-when='1') #{__('1 contact found')}
                span(ng-switch-default)
                  span(ng-if='searchResult.formattedResultsCount.isFormatted') #{__('About')}&nbsp;
                  span(ng-if='searchResult.formattedResultsCount.hits') {{searchResult.formattedResultsCount.hits}} #{__('contacts found')}
          .contacts-list-toolbar
            .contacts-search
              contact-search-form
            .contacts-toggle.flex-vertical-centered
              contact-list-toggle
            ul.actions
              li.dropdown
                a(href='', data-toggle='dropdown', aria-expanded='true')
                  i.mdi.mdi-dots-vertical
                ul.dropdown-menu.dropdown-menu-right
                  li
                    a(href='/#/controlcenter/accounts') #{__('Import')}
