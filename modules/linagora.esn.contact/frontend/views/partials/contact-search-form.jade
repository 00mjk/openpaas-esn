.contacts-search-form.fg-line
  .contacts-search-input.form-control
    form(ng-submit='search()')
      input(type="text", ng-model="searchInput", ng-change='search()', ng-blur='appendQueryToURL()', ng-model-options="{updateOn: 'default blur', debounce: {'default': 600, 'blur': 0}}", maxlength="{{SEARCH_INPUT_LIMIT}}")
      i.clickable.mdi.mdi-close(ng-click="clearSearchInput()", ng-show="searchInput")
