.contacts-search-form
  .contacts-search-input
    form(ng-submit='search()')
      input(type="text", ng-model="searchInput", ng-change='search()', ng-blur='appendQueryToURL()', ng-model-options="{updateOn: 'default blur', debounce: {'default': 600, 'blur': 0}}")
  .clear-search-input
    span.clickable.mdi.mdi-close(ng-click="clearSearchInput()", ng-show="searchInput")
