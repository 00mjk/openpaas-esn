.col-xs-12.esn-panel.contact-panel
  .row
    span.contact-heading
      i.fa.fa-user
      | #{__('Contacts')}
      fab.fab-fixed-bottom(type='create', on-click='openContactCreation()')

  .row
    .col-xs-11.nopadding
      .row(data-contact-index="{{letter}}" ng-repeat="(letter, contacts) in sorted_contacts")
        .row(ng-if='contacts && contacts.length')
          h2.letter-divider {{letter}}
          .row(ng-repeat="contact in contacts")
            hr
            contact-list-item(contact='contact', book-id="bookId")
          .vertiz-space
    .col-xs-1
      alpha-menu(keys="keys", prefix="prefix")