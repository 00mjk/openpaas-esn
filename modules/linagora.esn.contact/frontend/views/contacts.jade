.contacts-list.col-xs-12
  header.contacts-header
    .contacts-header-inner
      .all-centered
        .col-xs-12.col-md-8
          .flex-space-between.flex-vertical-centered.flex-wrap
            .contacts-header-title
              h2
                span #{__('Contacts')}
                small(ng-switch="searchResult.count" ng-if="!!searchInput")
                  span(ng-switch-when='0') #{__('No contacts found')}
                  span(ng-switch-when='1') #{__('1 contact found')}
                  span(ng-switch-default)
                    span(ng-if='searchResult.formattedResultsCount.isFormatted') #{__('About')}&nbsp;
                    span(ng-if='searchResult.formattedResultsCount.hits') {{searchResult.formattedResultsCount.hits}} #{__('contacts found')}

            .contacts-list-toolbar
              .contacts-toggle
                contact-list-toggle
              .contacts-search
                form(ng-submit='search()')
                  input(type="text", ng-model="searchInput", ng-change='search()', ng-blur='appendQueryToURL()', ng-model-options="{updateOn: 'default blur', debounce: {'default': 600, 'blur': 0}}")
              .clear-input
                span.clickable.mdi.mdi-close(ng-click="clearSearchInput()", ng-show="searchInput")

            fab(ng-click='openContactCreation()')

  .contacts-body.p-t-15
    .row
      .col-xs-12
        .contact-error-container
    .row
      .col-xs-12(infinite-scroll='scrollHandler()' infinite-scroll-distance='1' infinite-scroll-disabled='loadingNextContacts || searchFailure || lastPage')
        contact-list-displayer
        .text-center
          div.throbber(openpaas-logo-spinner, spinner-key='contactListSpinner')
