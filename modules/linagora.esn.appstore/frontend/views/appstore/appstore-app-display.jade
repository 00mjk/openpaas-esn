.people
  img(ng-src="/appstore/api/apps/{{::application._id}}/avatar", src="/appstore/images/application.png")
  a(href='#/appstore/apps/{{::application._id}}').title.text-center
    span {{::application.title}}
    small(data-ng-if="application.version") {{::application.version}}
div {{::application.description | characters:128 :false }}
  .row
    appstore-label-domain-deploy(application='application')
  .row
    appstore-switch-deploy(application="application", version="1.0.0", domain-deployment="domainDeployment")
