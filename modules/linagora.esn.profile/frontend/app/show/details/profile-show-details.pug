.pmb-block
  .pmbb-header
    h2
      i.mdi.mdi-account.m-r-5
      | #{__('Profile Informations')}
  .pmbb-body.p-l-30
    .pmbb-view
      dl.dl-horizontal
        dt
          i.mdi.mdi-email.m-r-5
          | #{__('Email')}
        dd
          a(ng-href="mailto:{{$ctrl.user.emails[0]}}", op-inbox-compose, op-inbox-compose-display-name="{{$ctrl.user.firstname}} {{$ctrl.user.lastname}}") {{$ctrl.user.emails[0]}}
      dl.dl-horizontal
        dt
          i.mdi.mdi-phone.m-r-5
          | #{__('Phone')}
        dd
          | {{$ctrl.user.main_phone}}
      dl.dl-horizontal
        dt
          i.mdi.mdi-city.m-r-5
          | #{__('Building Location')}
          dd
            | {{$ctrl.user.building_location}}
      dl.dl-horizontal
        dt
          i.mdi.mdi-monitor.m-r-5
          | #{__('Office Location')}
          dd
            | {{$ctrl.user.office_location}}
      dl.dl-horizontal
        dt
          i.mdi.mdi-account.m-r-5
          | #{__('Bio')}
          dd
            | {{$ctrl.user.description}}
