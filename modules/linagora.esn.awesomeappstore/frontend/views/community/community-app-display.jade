.app-display
  .thumbnail
    img(ng-src="/appstore/api/apps/{{::application._id}}/avatar", src="/images/application.png" style="height: 200px; width: 200px; display: block;")
    .caption
      h3
        a(href='#/appstore/apps/{{::application._id}}')
          span {{::application.title}} &nbsp;
          small {{::application.version}}

      p {{::application.description | characters:256 :false }}
      .row.text-center
        appstore-button-install(community='community', application='application', install='installApplication()', disabled='isInstalled() || load')
        &nbsp;
        appstore-button-uninstall(community='community', application='application', uninstall='uninstallApplication()', disabled='!canBeUninstalled() || load')
        &nbsp;
        appstore-button-update(community='community', application='application', update='updateApplication()', disabled='!canBeUpdated() || load')

