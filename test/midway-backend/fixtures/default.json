{
  "webserver": {
    "enabled": true,
    "port": 8081,
    "virtualhosts": []
  },
  "wsserver": {
    "enabled": false,
    "port": 8081
  },
  "log": {
    "file": {
      "enabled": true,
      "filename": "./log/mozilla-updater.log",
      "level": "info",
      "handleExceptions": true,
      "json": false,
      "prettyPrint": true,
      "colorize": false
    },
    "console": {
      "enabled": true,
      "level": "debug",
      "handleExceptions": true,
      "json": false,
      "prettyPrint": true,
      "colorize": true
    }
  },
  "auth": {
    "strategies": ["ldap"],
    "ldap": {
      "url": "ldap://localhost:1389",
      "adminDn": "uid=admin,ou=passport-ldapauth",
      "adminPassword": "secret",
      "searchBase": "ou=passport-ldapauth",
      "searchFilter": "(uid={{username}})"
    }
  }
}